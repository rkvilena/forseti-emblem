# Cloud Run env vars (backend)
# Set these on the Cloud Run service (or via Secret Manager + env var bindings).

ENVIRONMENT=production

# DB hosted on your dockerized VM
# Recommended: set DATABASE_URL directly
DATABASE_URL=postgresql+psycopg://postgres:postgres@<VM_IP_OR_HOSTNAME>:5432/forsetiemblem

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini

# Logging
LOG_LEVEL=INFO
DEBUG=false
RELOAD=false
